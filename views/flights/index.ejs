<%- include('../partials/header') %>
    <h1>Flights List</h1>
    <table id="'list">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure Date/Time</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
                <tr>
                    <% if ( f.departs && f.departs < new Date()) { %>
                        <td style="color: red"><%= f.airline %></td>
                    <td style="color: red"><%= f.airport %></td>
                    <td style="color: red"><%= f.flightNo %></td>
                        <td style="color: red"><%= f.departs %></td>
                        <% } else { %> 
                            <td><%= f.airline %></td>
                            <td><%= f.airport %></td>
                            <td><%= f.flightNo %></td>
                            <td><%= f.departs %></td>
                        <% } %>
                    <td><a id='detail' href="/flights/<%= f._id %>">Details</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<%- include('../partials/footer') %>
